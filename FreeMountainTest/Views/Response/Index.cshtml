@model IEnumerable<FreeMountainTest.Models.Response>

<div class="row pt-4 pb-4">
    <div class="col-6">
        <h2 class="pl-3">Response List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Response" asp-action="Add" class="btn btn-primary">Create New Response</a>
    </div>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        RESPONSE_CODE
                    </th>
                    <th>
                        RESPONSE_DESCRIPTION
                    </th>
                    <th>
                        CHANNEL
                    </th>
                    <th>
                        EDIT RESPONSE
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="25%">@obj.ResponseCode</td>
                    <td width="25%">@obj.ResponseDescription</td>
                    <td width="25%">@obj.Channel</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Response" asp-route-Id="@obj.ResponseCode" asp-action="Update" class="btn btn-primary mx-2">Edit</a>
                            <a asp-controller="Response" asp-route-Id="@obj.ResponseCode" asp-action="Delete" class="btn btn-primary mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>