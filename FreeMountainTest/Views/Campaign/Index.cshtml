@model IEnumerable<FreeMountainTest.Models.Campaign>

    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2 class="pl-3">Campaign List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Campaign" asp-action="Add" class="btn btn-primary">Create New Campaign</a>
        </div>
    </div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>
                        MFID
                    </th>
                    <th>
                        MFID_DESCRIPTION
                    </th>
                    <th>
                        CLIENT
                    </th>
                    <th>
                        CHANNEL
                    </th>
                    <th>
                        EDIT CAMPAIGN
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="20%">@obj.Mfid</td>
                    <td width="20%">@obj.MfidDescription</td>
                    <td width="20%">@obj.Client</td>
                    <td width="20%">@obj.Channel</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Campaign" asp-route-Id="@obj.Mfid" asp-action="Update" class="btn btn-primary mx-2">Edit</a>
                            <a asp-controller="Campaign" asp-route-Id="@obj.Mfid" asp-action="Delete" class="btn btn-primary mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>